        <dependency>
            <groupId>org.hamcrest</groupId>
            <artifactId>hamcrest-core</artifactId>
            <version>1.3</version>
            <scope>test</scope>
        </dependency>
        
        <!-- Eclipse MOXy for Testing Marshalling and Unmarshalling of
        JSON content back and forth -->
