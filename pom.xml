    <properties>
        <version.wildfly.swarm>2016.11.0</version.wildfly.swarm>
        <endorsed.dir>${project.build.directory}/endorsed</endorsed.dir>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
